<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.medicine.dao.IRoleDao">
	<!-- 角色信息 -->
	<select id="queryRole" parameterType="Page" resultType="Role">
		select r.role_id as "id",r.role_name as "name" from t_roles r limit
		#{offset},#{pageSize}
	</select>
	<!-- 角色数量 -->
	<select id="queryRoleCount" parameterType="Page" resultType="java.lang.Integer">
		select count(role_id) from t_roles
	</select>
	<!-- 添加角色 -->
	<insert id="addRole" parameterType="java.lang.String">
		insert into t_roles(role_name) values(#{roleName});
	</insert>
	<!-- 编辑用户 -->
	<update id="updateRole" parameterType="Role">
		update t_roles set role_name = #{name} where role_id = #{id}
	</update>
</mapper>